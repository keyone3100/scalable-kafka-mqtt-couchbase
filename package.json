{
  "name": "fdj",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:betting-service": "npm --workspace betting-service run dev",
    "dev:notification-service": "npm --workspace notification-service run dev",
    "dev:audit-service": "npm --workspace audit-service run dev",
    "dev:email-service": "npm --workspace email-service run dev",
    "dev:email-service:email": "npm --workspace email-service run email",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:betting-service\" \"npm run dev:notification-service\" \"npm run dev:audit-service\" \"npm run dev:email-service\"",
    "build:frontend": "npm --workspace frontend run build",
    "build:betting-service": "npm --workspace betting-service run build",
    "build:notification-service": "npm --workspace notification-service run build",
    "build:audit-service": "npm --workspace audit-service run build",
    "build:email-service": "npm --workspace email-service run build",
    "build:shared": "npm --workspace @fdj/shared run build",
    "build": "npm run build:shared && npm run build:frontend && npm run build:betting-service && npm run build:notification-service && npm run build:audit-service && npm run build:email-service",
    "start:frontend": "npm --workspace frontend run preview",
    "start:betting-service": "npm --workspace betting-service run start",
    "start:notification-service": "npm --workspace notification-service run start",
    "start:audit-service": "npm --workspace audit-service run start",
    "start:email-service": "npm --workspace email-service run start",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:betting-service\" \"npm run start:notification-service\" \"npm run start:audit-service\" \"npm run start:email-service\"",
    "lint:frontend": "npm --workspace frontend run lint",
    "lint:betting-service": "npm --workspace betting-service run lint",
    "lint:notification-service": "npm --workspace notification-service run lint",
    "lint:audit-service": "npm --workspace audit-service run lint",
    "lint:email-service": "npm --workspace email-service run lint",
    "lint": "npm run lint:frontend && npm run lint:betting-service && npm run lint:notification-service && npm run lint:audit-service && npm run lint:email-service",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:build": "docker compose -f docker-compose.production.yml build",
    "docker:up": "docker compose -f docker-compose.production.yml up -d",
    "docker:down": "docker compose -f docker-compose.production.yml down",
    "docker:logs": "docker compose -f docker-compose.production.yml logs -f",
    "docker:deploy": "./deploy.sh",
    "docker:stop": "./stop.sh",
    "infra:dev": "docker compose -f packages/infrastructure-dev/docker-compose.yml up -d",
    "infra:dev:down": "docker compose -f packages/infrastructure-dev/docker-compose.yml down",
    "postinstall": "npm run build:shared"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "^3.0.0"
  }
}