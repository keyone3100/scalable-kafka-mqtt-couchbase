{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@betting-service/*": ["./packages/betting-service/src/*"],
      "@notification-service/*": ["./packages/notification-service/src/*"],
      "@audit-service/*": ["./packages/audit-service/src/*"],
      "@frontend/*": ["./packages/frontend/src/*"],
      "@fdj/shared/enums/*": ["./packages/shared/dist/enums/*"],
      "@fdj/shared/types/*": ["./packages/shared/dist/types/*"],
      "@fdj/shared/services/*": ["./packages/shared/dist/services/*"],
      "@fdj/shared/helpers/*": ["./packages/shared/dist/helpers/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
