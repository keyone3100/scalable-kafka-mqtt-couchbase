{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "composite": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "./types/*": ["./types/*"],
      "./enums/*": ["./enums/*"],
      "./services/*": ["./services/*"],
      "./helpers/*": ["./helpers/*"]
    }
  },
  "include": ["enums/**/*.ts", "types/**/*.ts", "services/**/*.ts", "helpers/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
