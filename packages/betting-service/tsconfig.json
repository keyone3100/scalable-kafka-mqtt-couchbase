{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "../..",
    "paths": {
      "@/*": ["./src/*"],
      "@betting-service/*": ["./packages/betting-service/src/*"],
      "@notification-service/*": ["./packages/notification-service/src/*"],
      "@audit-service/*": ["./packages/audit-service/src/*"],
      "@frontend/*": ["./packages/frontend/src/*"],
      "@fdj/shared/enums/*": ["./packages/shared/dist/enums/*"],
      "@fdj/shared/types/*": ["./packages/shared/dist/types/*"],
      "@fdj/shared/types/kafka/*": ["./packages/shared/dist/types/kafka/*"],
      "@fdj/shared/services/*": ["./packages/shared/dist/services/*"],
      "@fdj/shared/helpers/*": ["./packages/shared/dist/helpers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
